// }

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
  posts    Post[]
}

model Post {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  countryId       Int
  country         Country  @relation(fields: [countryId], references: [id])
  state           State    @relation(fields: [stateId], references: [id])
  stateId         Int
  city            City     @relation(fields: [cityId], references: [id])
  cityId          Int
  title           String
  age             Int
  location        String
  categoryId      Int
  serviceGender   Int[]    @map("service_gender")
  postBody        String   @map("post_body")
  contact         String?
  receiveCall     Boolean? @default(false) @map("receive_call")
  pictures        String[]
  published       Boolean  @default(false)
  author          User     @relation(fields: [authorId], references: [id])
  authorId        Int
  category        Category @relation(fields: [categoryId], references: [id])
  ethnicity       Int[]
  hairColor       Int[]    @map("hair_color")
  tatoo           Int?
  seeClient       Int[]
  workingHours    String?  @map("working_hours")
  paymentMethods  Int[]    @map("payment_methods")
  bdsmActivity    Int[]    @map("bdsm_activity")
  visibleToGoogle Boolean  @default(false)
  disclaimer      Boolean  @default(false)
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
  slug  String
}

enum Role {
  USER
  ADMIN
}

model Country {
  id     Int     @id @unique @default(autoincrement())
  name   String
  states State[]
  slug   String
  posts  Post[]
}

model State {
  id        Int     @id @unique @default(autoincrement())
  name      String
  country   Country @relation(fields: [countryId], references: [id])
  countryId Int
  cities    City[]
  slug      String
  posts     Post[]
}

model City {
  id      Int    @id @unique @default(autoincrement())
  name    String
  state   State  @relation(fields: [stateId], references: [id])
  stateId Int
  slug    String
  posts   Post[]
}

model Payment {
  id   Int    @id @unique @default(autoincrement())
  name String
}

model HairColor {
  id   Int    @id @unique @default(autoincrement())
  name String
}

model Tatoo {
  id   Int    @id @unique @default(autoincrement())
  name String
}

model Ethnicity {
  id   Int    @id @unique @default(autoincrement())
  name String
}

model BdsmActivity {
  id   Int    @id @unique @default(autoincrement())
  name String
}
